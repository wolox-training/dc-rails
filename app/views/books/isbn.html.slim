= form_for :book, url: '/api/v1/books/isbn', remote: true, html: {class: ['flex-column', 'new-form'], id: 'isbn-form'} do |f|
  .flex.new-form-item
    = f.label :title, 'Isbn'
    = f.text_field :isbn
  .flex.new-form-bottom
    = f.submit  value: 'Find Book'
table#book-table
  tr
    th
      | Title
    th
      | Subtitle
    th
      | Autor
    th
      | Isbn
    th
      | Number of pages
